@model EasyPark.Models.Customer

@{
    ViewData["Title"] = "刪除用戶";
}
<link href="~/css/mycustomer.min.css" rel="stylesheet" />
<h1>@ViewData["Title"]</h1>
<h3>你確定要刪除用戶嗎?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BlackCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BlackCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsBlack)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsBlack)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" value="Delete" class="btn btnS">刪除<span></span></button>
    </form>
    <div>
        <a asp-action="Index">返回</a>
    </div>
</div>
