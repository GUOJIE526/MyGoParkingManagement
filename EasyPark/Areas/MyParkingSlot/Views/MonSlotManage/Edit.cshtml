@model EasyPark.Areas.MyParkingSlot.ViewModels.MonthlyApplyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MonApplyList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="ApplyEditForm" class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplyId" />
            <div class="form-group">
                <label asp-for="ApplyDate" class="control-label"></label>
                <input asp-for="ApplyDate" class="form-control" />
                <span asp-validation-for="ApplyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LotName" class="control-label"></label>
                <select asp-for="LotName" class="form-control" asp-items="ViewBag.LotName"></select>
                <span asp-validation-for="LotName" class="text-danger"></span>
            </div>
            @* 暫時改輸入框 成功後要刪除這串 *@
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplyStatus" class="control-label"></label>
                <select asp-for="ApplyStatus" class="form-control">
                    <option value="pending">pending</option>
                    <option value="notified">notified</option>
                    <option value="accepted">accepted</option>
                    <option value="cancelled">cancelled</option>
                </select>
                <span asp-validation-for="ApplyStatus" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
